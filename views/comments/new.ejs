<% include ../partials/header %>

<div class= container>
  <div class = "row">
    <h1 style= "text-align:center;"> Add New Comment to <%= campground.name %></h1>
      <div style="width:35%; margin:30px auto;">
        <form action ="campgrounds/<%= campground._id %>/comments" method = "post">
          <div class = "form-group">
            <input class="form-control" type = "text" name = "comment[name]" placeholder="text">
          </div>
          <div class = "form-group">
            <input class="form-control" type = "text" name = "comment[author]" placeholder = "author">
          </div>
          <div class = "form-group">
            <button class="btn btn-lg btn-default btn-block btn-success">Submit</button>
          </div>
        </form>
        <a href="/campgrounds"><strong>Go Back</strong></a>
      </div>
    </div>
  </div>
<% include ../partials/footer %>